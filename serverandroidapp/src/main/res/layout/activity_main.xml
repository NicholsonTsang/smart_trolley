<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="open connection"
        android:layout_marginTop="15dp"
        android:id="@+id/enableconnectionbtn"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="close connection"
        android:layout_marginTop="15dp"
        android:id="@+id/disableconnection"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="speed"
        android:id="@+id/speedvalue"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="direction"
        android:id="@+id/directionvalue"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="connection state"
        android:id="@+id/connectionstatevalue"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="client IP"
        android:id="@+id/clientIPvalue"/>


</LinearLayout>